<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_live_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="라이브 종료" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_live_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="라이브 제목"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_live_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="라이브 최대 인원 수"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_live_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="라이브 태그"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_live_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="라이브 호스트"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>